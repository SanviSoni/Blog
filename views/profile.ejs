<%- include('partials/header') %>

    <%- include('partials/nav') %>

        <div class="min-h-screen w-full flex justify-center items-center flex-col ">


            <h1 class="flex justify-center text-2xl  mb-3">User Profile </h1>
            <div class=" w-[90%] h-[70vh] bg-gray-600 rounded-2xl flex flex-col  items-center">

                <h1 class=" w-full text-end px-8 mt-5 "><a href="/users/logout"
                        class="px-4 py-2  bg-gray-400 rounded-2xl text-gray-200"> Logout</a></h1>

                <div class="h-[35vh] w-[35vh]  rounded-full bg-purple-800 mt-6 border-8 ">
                    <img src="<%= user.profile %>" alt="" class="w-full h-full object-center object-cover rounded-full">
                </div>
                <form action="/users/uploadimage/<%= user._id %>" method="post" enctype="multipart/form-data">

                    <input type="file" placeholder="upload profile picture" name="avatar">
                    <button>sumbit</button>
                </form>

                <div class=" ">
                    <h1 class="text-white text-4xl text-center">
                        <%= user.username %>
                    </h1>
                    <h1 class="text-white text-2xl">
                        <%= user.email %>
                    </h1>




                </div>



            </div>

            <h1 class="text-4xl mt-8 font-bold text-gray-700">All-Blogs</h1>
            <div class="allblogs flex flex-wrap p-5  w-full justify-center gap-3 min-h-screen ">

                <div class="allBlog  flex  flex-wrap gap-4 p-5  justify-center ">



                    <%user.blogs.forEach((elm)=>{%>

                        <div class="w-[45vh] h-[45vh] bg-gray-200 rounded p-3 overflow-hidden ">

                            <div class="w-full bg-purple-400 h-[75%] rounded  ">
                                <img src="<%= elm. blogImage %>" class="w-full h-full rounded" alt="">

                            </div>

                            <h1 class="font-bold hover:text-red-500 text-xl ">
                                <%= elm.title %>

                            </h1>
                            <h1 class="text-gray-700">
                                <%= elm.author %>
                            </h1>

                           
                        </div>



                        <% }) %>
                </div>

            </div>



        </div>






        <%- include('partials/footer') %>